@{ 
    ViewData["Title"] = "Chat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var users = ViewBag.Users as List<Internal_Real_time_Chat_Website.Models.ApplicationUser>;
}

<div class="h-full flex bg-gray-50">
    <!-- Users Sidebar -->
    <div class="w-80 bg-white border-r border-gray-200 flex flex-col">
        <!-- Sidebar Header -->
        <div class="p-6 border-b border-gray-200">
            <div class="flex items-center justify-between">
                <h2 class="text-xl font-semibold text-gray-900">Users</h2>
                <div class="flex items-center space-x-2">
                    <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
                    <span class="text-sm font-medium text-gray-600" id="onlineCount">0 online</span>
                </div>
            </div>
        </div>

        <!-- Users List -->
        <div class="flex-1 overflow-y-auto">
            <div class="p-4 space-y-2" id="usersList">
                @if (users != null)
                {
                    @foreach (var user in users)
                    {
                        <div class="user-item cursor-pointer p-3 rounded-lg hover:bg-gray-50 transition-colors border border-transparent hover:border-gray-200" 
                             data-user-id="@user.Id" data-user-name="@user.FullName">
                            <div class="flex items-center space-x-3">
                                <!-- Avatar -->
                                <div class="relative">
                                    @if (!string.IsNullOrEmpty(user.Avatar))
                                    {
                                        <img src="@user.Avatar" alt="@user.FullName" class="w-10 h-10 rounded-full object-cover border border-gray-200" />
                                    }
                                    else
                                    {
                                        <div class="w-10 h-10 bg-gradient-to-br from-primary-400 to-primary-600 rounded-full flex items-center justify-center">
                                            <span class="text-white font-medium text-sm">@user.FullName.Substring(0, 1).ToUpper()</span>
                                        </div>
                                    }
                                    <div class="absolute -bottom-1 -right-1 w-4 h-4 rounded-full border-2 border-white status-indicator @(user.IsOnline ? "bg-green-500" : "bg-gray-400")" 
                                         data-user-id="@user.Id"></div>
                                </div>
                                
                                <!-- User Info -->
                                <div class="flex-1 min-w-0">
                                    <p class="text-sm font-medium text-gray-900 truncate">@user.FullName</p>
                                    <p class="text-xs text-gray-500 truncate">@user.Email</p>
                                </div>
                                
                                <!-- Status Badge -->
                                <div class="flex-shrink-0">
                                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium status-badge @(user.IsOnline ? "bg-green-100 text-green-800" : "bg-gray-100 text-gray-800")" 
                                          data-user-id="@user.Id">
                                        @(user.IsOnline ? "Online" : "Offline")
                                    </span>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

    <!-- Chat Area -->
    <div class="flex-1 flex flex-col">
        <!-- Chat Header -->
        <div class="bg-white border-b border-gray-200 p-6">
            <div id="chatHeader" class="hidden">
                <div class="flex items-center space-x-3">
                    <div class="w-10 h-10 bg-gradient-to-br from-primary-400 to-primary-600 rounded-full flex items-center justify-center">
                        <span class="text-white font-medium text-sm" id="chatUserInitial">U</span>
                    </div>
                    <div class="flex-1">
                        <h3 class="text-lg font-semibold text-gray-900" id="chatUserName">User Name</h3>
                        <div class="flex items-center space-x-2">
                            <div class="w-2 h-2 bg-green-500 rounded-full" id="chatUserStatusDot"></div>
                            <span class="text-sm text-gray-500" id="chatUserStatus">Online</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div id="noChatSelected" class="text-center py-12">
                <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-comments text-2xl text-gray-400"></i>
                </div>
                <h3 class="text-lg font-medium text-gray-900 mb-2">Select a user to start chatting</h3>
                <p class="text-gray-500">Choose someone from the users list to begin your conversation</p>
            </div>
        </div>

        <!-- Messages Area -->
        <div class="flex-1 overflow-y-auto bg-gray-50 p-6" id="messagesContainer">
            <div class="space-y-4" id="messagesList"></div>
        </div>

        <!-- Message Input -->
        <div class="bg-white border-t border-gray-200 p-6" id="messageInputArea" style="display: none;">
            <form id="messageForm" class="flex items-end space-x-3">
                <div class="flex-1">
                    <div class="relative">
                        <input type="text" 
                               id="messageInput" 
                               placeholder="Type your message..." 
                               autocomplete="off"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent resize-none"
                               rows="1">
                        <input type="file" id="fileInput" accept="image/*,.pdf,.doc,.docx,.txt" class="hidden">
                    </div>
                </div>
                
                <button type="button" 
                        id="attachBtn"
                        class="p-3 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-lg transition-colors">
                    <i class="fas fa-paperclip text-lg"></i>
                </button>
                
                <button type="submit" 
                        id="sendBtn"
                        class="px-6 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 transition-colors">
                    <i class="fas fa-paper-plane"></i>
                </button>
            </form>
        </div>
    </div>
</div>

<!-- Loading Spinner -->
<div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50" id="loadingSpinner" style="display: none;">
    <div class="bg-white rounded-lg p-6 flex items-center space-x-3">
        <div class="animate-spin rounded-full h-6 w-6 border-b-2 border-primary-600"></div>
        <span class="text-gray-700">Loading...</span>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/@@microsoft/signalr@latest/dist/browser/signalr.min.js"></script>
    <script src="~/js/chat.js"></script>
}


