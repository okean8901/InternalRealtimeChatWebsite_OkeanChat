@model List<Internal_Real_time_Chat_Website.Models.Post>
@{ 
    ViewData["Title"] = "Newsfeed";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="h-full min-h-0">
    <div class="h-full overflow-y-auto">
        <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Create Post -->
    <div class="bg-white rounded-xl shadow p-6 mb-6">
        <form asp-action="CreatePost" method="post" enctype="multipart/form-data" class="space-y-4">
            @Html.AntiForgeryToken()
            <textarea name="content" rows="3" placeholder="What's on your mind?" class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-primary-500 focus:border-transparent"></textarea>
            <div class="flex items-center justify-between">
                <label class="inline-flex items-center cursor-pointer text-gray-600 hover:text-gray-800">
                    <i class="fas fa-image mr-2"></i>
                    <span>Add photo</span>
                    <input type="file" name="image" accept="image/*" class="hidden" />
                </label>
                <button type="submit" class="px-5 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700">Post</button>
            </div>
        </form>
    </div>

    <!-- Feed -->
    <div class="space-y-6">
        @foreach (var post in Model)
        {
            <div class="bg-white rounded-xl shadow">
                <!-- Header -->
                <div class="p-4 flex items-center space-x-3 border-b border-gray-100">
                    @if (!string.IsNullOrEmpty(post.User.Avatar))
                    {
                        <img src="@post.User.Avatar" class="w-10 h-10 rounded-full object-cover" alt="@post.User.FullName" />
                    }
                    else
                    {
                        <div class="w-10 h-10 bg-gradient-to-br from-primary-400 to-primary-600 rounded-full flex items-center justify-center text-white font-medium">
                            @post.User.FullName.Substring(0,1).ToUpper()
                        </div>
                    }
                    <div>
                        <div class="font-semibold text-gray-900">@post.User.FullName</div>
                        <div class="text-xs text-gray-500">@post.CreatedAt.ToLocalTime().ToString("g")</div>
                    </div>
                </div>

                <!-- Content -->
                <div class="p-4 space-y-4">
                    @if (!string.IsNullOrWhiteSpace(post.Content))
                    {
                        <div class="text-gray-800 whitespace-pre-line">@post.Content</div>
                    }
                    @if (!string.IsNullOrEmpty(post.ImageUrl))
                    {
                        <img src="@post.ImageUrl" class="w-full rounded-lg border border-gray-100" alt="post image" />
                    }
                </div>

                <!-- Actions -->
                <div class="px-4 pb-4">
                    <form asp-action="ToggleLike" method="post" class="inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="postId" value="@post.Id" />
                        <button class="px-4 py-2 rounded-lg text-gray-700 hover:bg-gray-100">
                            <i class="fas fa-thumbs-up mr-2"></i>
                            Like (@post.LikesCount)
                        </button>
                    </form>
                </div>

                <!-- Comments -->
                <div class="px-4 pb-4 space-y-3">
                    @foreach (var c in post.Comments.OrderBy(c => c.CreatedAt))
                    {
                        <div class="flex items-start space-x-3">
                            @if (!string.IsNullOrEmpty(c.User.Avatar))
                            {
                                <img src="@c.User.Avatar" class="w-8 h-8 rounded-full object-cover" alt="@c.User.FullName" />
                            }
                            else
                            {
                                <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center text-white text-xs">
                                    @c.User.FullName.Substring(0,1).ToUpper()
                                </div>
                            }
                            <div class="bg-gray-100 rounded-xl px-3 py-2">
                                <div class="text-sm font-medium">@c.User.FullName</div>
                                <div class="text-sm text-gray-800">@c.Content</div>
                                <div class="text-xs text-gray-500">@c.CreatedAt.ToLocalTime().ToString("g")</div>
                            </div>
                        </div>
                    }

                    <form asp-action="AddComment" method="post" class="flex items-center space-x-3">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="postId" value="@post.Id" />
                        <input type="text" name="content" placeholder="Write a comment..." class="flex-1 border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-primary-500 focus:border-transparent" />
                        <button type="submit" class="px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700">Comment</button>
                    </form>
                </div>
            </div>
        }
    </div>
        </div>
    </div>
</div>
