<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OkeanChat</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tailwind-custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Internal_Real_time_Chat_Website.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#eff6ff',
                            100: '#dbeafe',
                            200: '#bfdbfe',
                            300: '#93c5fd',
                            400: '#60a5fa',
                            500: '#3b82f6',
                            600: '#2563eb',
                            700: '#1d4ed8',
                            800: '#1e40af',
                            900: '#1e3a8a',
                        },
                        chat: {
                            bg: '#f8fafc',
                            sidebar: '#ffffff',
                            message: {
                                sent: '#3b82f6',
                                received: '#e2e8f0',
                            }
                        }
                    },
                    fontFamily: {
                        'sans': ['Inter', 'system-ui', 'sans-serif'],
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50 font-sans">
    @if (User.Identity?.IsAuthenticated == true)
    {
        <header class="bg-white shadow-sm border-b border-gray-200">
            <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between items-center h-16">
                    <!-- Logo -->
                    <div class="flex items-center">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="flex items-center space-x-2 text-primary-600 hover:text-primary-700 transition-colors">
                            <div class="w-8 h-8 bg-primary-600 rounded-lg flex items-center justify-center">
                                <i class="fas fa-comments text-white text-sm"></i>
                            </div>
                            <span class="text-xl font-bold">OkeanChat</span>
                        </a>
                    </div>

                    <!-- Navigation -->
                    <div class="hidden md:flex items-center space-x-8">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="flex items-center space-x-2 text-gray-700 hover:text-primary-600 transition-colors">
                            <i class="fas fa-home"></i>
                            <span>Home</span>
                        </a>
                    </div>

                    <!-- User Menu -->
                    <div class="flex items-center space-x-4">
                        <div class="relative">
                            <button class="flex items-center space-x-2 text-gray-700 hover:text-primary-600 transition-colors" onclick="toggleUserMenu()">
                                <div class="w-8 h-8 bg-primary-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-user text-primary-600 text-sm"></i>
                                </div>
                                <span class="hidden sm:block font-medium">@User.Identity.Name</span>
                                <i class="fas fa-chevron-down text-xs"></i>
                            </button>
                            
                            <!-- Dropdown Menu -->
                            <div id="userMenu" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 py-1 z-50">
                                <a asp-controller="Profile" asp-action="Me" class="flex items-center space-x-2 px-4 py-2 text-gray-700 hover:bg-gray-50 transition-colors">
                                    <i class="fas fa-id-badge text-gray-400"></i>
                                    <span>My Profile</span>
                                </a>
                                <a href="#" onclick="logout()" class="flex items-center space-x-2 px-4 py-2 text-gray-700 hover:bg-gray-50 transition-colors">
                                    <i class="fas fa-sign-out-alt text-gray-400"></i>
                                    <span>Logout</span>
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Mobile menu button -->
                    <div class="md:hidden">
                        <button type="button" class="text-gray-700 hover:text-primary-600" onclick="toggleMobileMenu()">
                            <i class="fas fa-bars text-xl"></i>
                        </button>
                    </div>
                </div>

                <!-- Mobile menu -->
                <div id="mobileMenu" class="hidden md:hidden border-t border-gray-200 py-4">
                    <div class="space-y-2">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="flex items-center space-x-2 text-gray-700 hover:text-primary-600 transition-colors py-2">
                            <i class="fas fa-home"></i>
                            <span>Home</span>
                        </a>
                        <a asp-controller="Profile" asp-action="Me" class="flex items-center space-x-2 text-gray-700 hover:text-primary-600 transition-colors py-2">
                            <i class="fas fa-id-badge"></i>
                            <span>My Profile</span>
                        </a>
                        <a href="#" onclick="logout()" class="flex items-center space-x-2 text-gray-700 hover:text-primary-600 transition-colors py-2">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Logout</span>
                        </a>
                    </div>
                </div>
            </nav>
        </header>
    }
    
    <div class="@(User.Identity?.IsAuthenticated == true ? "h-screen flex flex-col" : "min-h-screen")">
        <main role="main" class="@(User.Identity?.IsAuthenticated == true ? "flex-1 overflow-hidden" : "container mx-auto px-4 py-8")">
            @RenderBody()
        </main>
    </div>

    @if (User.Identity?.IsAuthenticated != true)
    {
        <footer class="bg-white border-t border-gray-200 mt-auto">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
                <div class="text-center text-gray-500">
                    <p>&copy; 2025 - OkeanChat - Internal Real-time Chat Application</p>
                </div>
            </div>
        </footer>
    }
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
    <script>
        function logout() {
            if (confirm('Are you sure you want to logout?')) {
                document.getElementById('logoutForm').submit();
            }
        }

        function toggleUserMenu() {
            const menu = document.getElementById('userMenu');
            menu.classList.toggle('hidden');
        }

        function toggleMobileMenu() {
            const menu = document.getElementById('mobileMenu');
            menu.classList.toggle('hidden');
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            const userMenu = document.getElementById('userMenu');
            const userButton = event.target.closest('button[onclick="toggleUserMenu()"]');
            
            if (!userButton && !userMenu.contains(event.target)) {
                userMenu.classList.add('hidden');
            }
        });
    </script>
    
    @if (User.Identity?.IsAuthenticated == true)
    {
        <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" style="display: none;">
            @Html.AntiForgeryToken()
        </form>
    }
</body>
</html>
