@model Internal_Real_time_Chat_Website.Controllers.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-primary-50 to-primary-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <!-- Logo and Title -->
        <div class="text-center">
            <div class="mx-auto h-16 w-16 bg-primary-600 rounded-xl flex items-center justify-center">
                <i class="fas fa-comments text-white text-2xl"></i>
            </div>
            <h2 class="mt-6 text-3xl font-bold text-gray-900">Create your account</h2>
            <p class="mt-2 text-sm text-gray-600">Join OkeanChat and start connecting</p>
        </div>

        <!-- Register Form -->
        <div class="bg-white py-8 px-6 shadow-xl rounded-xl">
            <form asp-action="Register" method="post" class="space-y-6">
                <div asp-validation-summary="All" class="text-red-600 text-sm"></div>
                
                <!-- Full Name Field -->
                <div>
                    <label asp-for="FullName" class="block text-sm font-medium text-gray-700 mb-2">Full Name</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-user text-gray-400"></i>
                        </div>
                        <input asp-for="FullName" 
                               class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors" 
                               placeholder="Enter your full name" />
                    </div>
                    <span asp-validation-for="FullName" class="text-red-500 text-xs mt-1"></span>
                </div>
                
                <!-- Email Field -->
                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-2">Email address</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-envelope text-gray-400"></i>
                        </div>
                        <input asp-for="Email" 
                               class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors" 
                               placeholder="Enter your email" />
                    </div>
                    <span asp-validation-for="Email" class="text-red-500 text-xs mt-1"></span>
                </div>
                
                <!-- Password Field -->
                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-2">Password</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-lock text-gray-400"></i>
                        </div>
                        <input asp-for="Password" 
                               class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors" 
                               placeholder="Enter your password" />
                    </div>
                    <span asp-validation-for="Password" class="text-red-500 text-xs mt-1"></span>
                </div>
                
                <!-- Confirm Password Field -->
                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-2">Confirm Password</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-lock text-gray-400"></i>
                        </div>
                        <input asp-for="ConfirmPassword" 
                               class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors" 
                               placeholder="Confirm your password" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs mt-1"></span>
                </div>
                
                <!-- Submit Button -->
                <div>
                    <button type="submit" 
                            class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors">
                        <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                            <i class="fas fa-user-plus text-primary-500 group-hover:text-primary-400"></i>
                        </span>
                        Create Account
                    </button>
                </div>
                
                <!-- Login Link -->
                <div class="text-center">
                    <p class="text-sm text-gray-600">
                        Already have an account? 
                        <a asp-action="Login" class="font-medium text-primary-600 hover:text-primary-500 transition-colors">
                            Sign in here
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
